<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".screen.detail.DetailMatchActivity">
    <ScrollView
        android:id="@+id/scr_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DPMA_txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                tools:text="Date Of Match" />

            <RelativeLayout
                android:id="@+id/ResultLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/DPMA_txt_team_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp"
                    tools:text="FC Barcelona" />


                <TextView
                    android:id="@+id/DPMA_txt_team_away"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp"
                    tools:text="Bayern Munich" />

                <ImageView
                    android:id="@+id/DPMA_img_home"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/DPMA_img_away" />

                <ImageView
                    android:id="@+id/DPMA_img_away"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/DPMA_txt_team_away"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/DPMA_txt_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"
                    tools:text="0 vs 0" />

                <TextView
                    android:id="@+id/DPMA_txt_form_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/DPMA_img_home"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    tools:text="4-3-3" />

                <TextView
                    android:id="@+id/DPMA_txt_form_away"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/DPMA_img_away"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    tools:text="4-3-2-1" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <RelativeLayout
                android:id="@+id/StatisticLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/line1_statistic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/DPMA_txt_goal_away"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="Striker 1" />

                    <TextView
                        android:id="@+id/DPMA_txtGoals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/goals"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/DPMA_txt_goal_home"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="Striker 1" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <RelativeLayout
                android:id="@+id/CardsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/line1_cards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/DPMA_txt_red_away"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="0" />

                    <TextView
                        android:id="@+id/DPMA_txtRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/red_card"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/DPMA_txt_red_home"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/line2_cards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1_cards"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/DPMA_txt_yellow_home"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textAlignment="viewStart"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="1" />

                    <TextView
                        android:id="@+id/DPMA_txt_yellow_away"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="2" />

                    <TextView
                        android:id="@+id/DPMA_txtYellow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/yellow_card"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:ignore="SmallSp" />
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <RelativeLayout
                android:id="@+id/LineupLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/line1_lineup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/DPMA_txt_gk_home"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="xxx" />

                    <TextView
                        android:id="@+id/txtGk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/goal_keeper"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/DPMA_txt_gk_away"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="xxx" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/line2_lineup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1_lineup"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/txtDef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/defense"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/DPMA_txt_def_away"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="2" />

                    <TextView
                        android:id="@+id/DPMA_txt_def_home"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textAlignment="viewStart"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/line3_lineup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line2_lineup"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/DPMA_txt_mid_home"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textAlignment="viewStart"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="1" />

                    <TextView
                        android:id="@+id/DPMA_txt_mid_away"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="2" />

                    <TextView
                        android:id="@+id/txtMid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/midfield"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:ignore="SmallSp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/line4_lineup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line3_lineup"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/txtForward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@string/forward"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/DPMA_txt_fwd_home"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textAlignment="viewStart"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="1" />

                    <TextView
                        android:id="@+id/DPMA_txt_fwd_away"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="textEnd"
                        android:textSize="14sp"
                        tools:ignore="SmallSp"
                        tools:text="2" />
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_shadow_start_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/DPMA_txt_sub_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:ignore="SmallSp"
                    tools:text="0" />

                <TextView
                    android:id="@+id/DPMA_txt_sub_away"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:ignore="SmallSp"
                    tools:text="0" />

                <TextView
                    android:id="@+id/txtSub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/substitute"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    tools:ignore="SmallSp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/pb_detail"/>


</RelativeLayout>