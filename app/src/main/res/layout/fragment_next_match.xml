    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.match.NextMatchFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_next">
